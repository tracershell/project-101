    form.submit();  // employeeFormì„ /edit/:eid ë¡œ ì œì¶œ
    }

    
    function setEditAction() {
    const eid = document.querySelector('input[name="eid"]').value.trim();
    if (!eid) {
      alert("ìˆ˜ì •í•  ì§ì›ì˜ EIDë¥¼ ë¨¼ì € ì„ íƒí•˜ê±°ë‚˜ ì…ë ¥í•´ì£¼ì„¸ìš”.");
      event.preventDefault();
