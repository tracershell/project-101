<form action="/vendor_name/add" method="post" style="display: inline-block; float: right;">
  <input type="text" name="new_vendor" placeholder="Vendor Ïù¥Î¶Ñ" required>
  <button type="submit">Vendor Ïù¥Î¶Ñ Îì±Î°ù</button>
