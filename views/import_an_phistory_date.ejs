<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    h3 { margin-bottom: 20px; }
    table { width: 100%; border-collapse: collapse; font-size: 14px; }
    th, td { border: 1px solid #ccc; padding: 8px; text-align: center; }
    th { background-color: #f2f2f2; }
    tr:nth-child(even) { background-color: #fafafa; }
    tfoot td { font-weight: bold; background-color: #f9f9f9; }
  </style>
</head>
<body>
  <h3><%= title %></h3>

  <% 
    let totalUsd = 0;
    let totalKrw = 0;
  %>

  <table>
    <thead>
      <tr>
        <th>날짜</th>
        <th>PO 번호</th>
        <th>스타일</th>
        <th>유형</th>
        <th>USD 금액</th>
        <th>환율</th>
        <th>환산 금액 (KRW)</th>
        <th>비고</th>
      </tr>
    </thead>
    <tbody>
      <% payments.forEach(p => { 
        const dateObj = new Date(p.paydate);
        const mm = String(dateObj.getMonth() + 1).padStart(2, '0');
        const dd = String(dateObj.getDate()).padStart(2, '0');
        const yy = String(dateObj.getFullYear()).slice(-2);
        const formattedDate = `${mm}/${dd}/${yy}`;
        const usdAmount = parseFloat(p.payamount).toFixed(2);
        const rate = parseFloat(p.exrate).toFixed(4);
        const krwAmount = (p.payamount * p.exrate).toFixed(2);
        totalUsd += parseFloat(usdAmount);
        totalKrw += parseFloat(krwAmount);
      %>
        <tr>
          <td><%= formattedDate %></td>
          <td><%= p.pono %></td>
          <td><%= p.style %></td>
          <td><%= p.paytype %></td>
          <td><%= usdAmount %></td>
          <td><%= rate %></td>
          <td><%= krwAmount %></td>
          <td><%= p.note || '-' %></td>
        </tr>
      <% }) %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="4">합계</td>
        <td><%= totalUsd.toFixed(2) %></td>
        <td></td>
        <td><%= totalKrw.toFixed(2) %></td>
        <td></td>
      </tr>
    </tfoot>
  </table>

  <div style="margin-top: 20px;">
    <a href="/import_an">← 돌아가기</a>
  </div>
</body>
</html>
